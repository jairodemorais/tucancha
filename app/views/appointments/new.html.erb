<div class="container formimg">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <div class="row">
        <div class="col-md-12 col-lg-12">
          <h3>Hace tu reserva</h3>
        </div>
      </div>
      <%= form_for @appointment, :url => { :action => "search" }  do |f|  %>
        <input class="span2" name="hour" type="hidden" />

        <div class="row">
          <div class="col-sm-4 col-md-4 col-lg-4">
            <div id="canchas" class="inner-addon right-addon">
              <i class="icon-cancha"></i>
              <input class="typeahead" type="text" name="place" placeholder="Cancha">
            </div>
          </div>
        
          <div class="col-sm-3 col-md-3 col-lg-3">
            <input type="text" id="datepicker" placeholder="Fecha" name="date" class="form-control">
          </div>
          <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="hour" data-toggle="dropdown">
                    Hora
                    <span class="caret"></span>
                </button>
                <ul id="time-menu" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">07:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">08:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">09:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">10:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">11:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">12:00 AM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">01:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">02:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">03:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">04:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">05:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">06:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">07:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">08:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">09:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">10:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">11:00 PM</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">12:00 PM</a></li>
                </ul>
            </div>
          </div>
          <div class="col-sm-2 col-md-2 col-lg-2">
            <button id="search-btn" type="submit" class="btn btn-success form-control pull-right">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "appointment.js" %>