<div class="container formimg">
  <div class="row first-row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
      <a href="/account/facebook/login/" class="btn-facebook">Entra con Facebook</a></p>
    </div>
  </div>
  <div>
    <%= image_tag "o.png", width: "354px" %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
         <%= f.email_field :email, autofocus: true, placeholder: "Escribe tu email", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Escribe tu contraseña", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= f.submit "Ingresa", class: "btn btn-success" %>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-5 col-lg-6">
            <input type="buttom" class="btn btn-success" value="registrate">
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <a href="/account/password/reset/"> ¿Has olvidado tu contraseña? </a>
        </div>
      </div>
    </div>
  </div>
</div>